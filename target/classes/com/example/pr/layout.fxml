        <Label text="ФИО пациента:" />
        <TextField fx:id="patientNameField" layoutX="150.0" layoutY="10.0" />

        <Label text="ФИО врача:" layoutY="40.0" />
        <TextField fx:id="doctorNameField" layoutX="150.0" layoutY="40.0" />

        <Label text="Название болезни:" layoutY="70.0" />
        <TextField fx:id="diseaseNameField" layoutX="150.0" layoutY="70.0" />

